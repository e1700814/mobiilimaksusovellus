<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PayApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_6</item>
        <item name="colorPrimaryVariant">@color/purple_8</item>
        <item name="colorPrimaryDark">@color/purple_10</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/purple_1</item>
        <item name="cardBackgroundColor">@color/purple_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_2</item>
        <item name="colorSecondaryVariant">@color/warm_blue</item>
        <item name="colorOnSecondary">@color/silver_shade</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/silver</item>
        <item name="colorOnTertiary">@color/silver</item>
        <item name="checkedIconTint">@color/silver</item>
    </style>
</resources>